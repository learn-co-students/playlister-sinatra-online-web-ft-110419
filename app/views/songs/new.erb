<h1>Create a new song</h1>

<form action="/songs" method="POST">
 <label>Name:</label>
 <br>
 <input type="text" name="song[name]" id="Name">
 
 <br>
 <p>Select an existing genre or create a new one below.</p>
 
 
 <h3>Existing Genres</h3>
 <% @genres.each do |genre| %>
   <input type="checkbox" name="song[genres][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input><br>
 <% end %>
 <br>
 
 <h3>Artist</h3>
 <label>Artist Name: </label>
 <br>
 <input type="text" name="song[artist][name]" id="Artist Name"></input>
 <br><br>
 
 <input type="submit" value="Create Song">
</form>
